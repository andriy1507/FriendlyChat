<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage_circleImageView_chatFromRow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/register_field_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_textView_chatFromRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/register_field_shape"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/profileImage_circleImageView_chatFromRow"
        app:layout_constraintStart_toEndOf="@+id/profileImage_circleImageView_chatFromRow"
        app:layout_constraintTop_toTopOf="@+id/profileImage_circleImageView_chatFromRow" />

</androidx.constraintlayout.widget.ConstraintLayout>